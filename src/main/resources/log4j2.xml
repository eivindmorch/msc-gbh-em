<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE Configuration>

<Configuration>

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>

        <File name="HlaLib" fileName="logs/hlalib.log">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
        </File>

        <File name="Training" fileName="logs/training.log">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
        </File>

        <File name="DataLogging" fileName="logs/dataLogging.log">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}{FATAL=red blink, ERROR=red, WARN=yellow bold, INFO=black, DEBUG=green bold, TRACE=blue}"/>
        </File>

    </Appenders>


    <Loggers>

        <Logger name="no.ffi.hlalib" level="debug" additivity="false">
            <AppenderRef ref="HlaLib"/>
        </Logger>

        <Logger name="datalogging" level="debug" additivity="false">
            <AppenderRef ref="DataLogging"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="training" level="debug" additivity="false">
            <AppenderRef ref="Training"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="error">
            <appender-ref ref="Console"/>
        </Root>

    </Loggers>

</Configuration>