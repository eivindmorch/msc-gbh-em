<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE Configuration>

<Configuration>

    <Appenders>

        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36} @%L - %msg%n}"/>
        </Console>

        <File name="HlaLib" fileName="logs/hlalib/hlalib-${date:yyyy-MM-dd-HH-mm-ss}.log" append="false">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}"/>
        </File>

        <File name="Training" filename="logs/training/training-${date:yyyy-MM-dd-HH-mm-ss}.log" append="false">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}"/>
        </File>

        <File name="UnitLogger" fileName="logs/unitlogger/unitlogger-${date:yyyy-MM-dd-HH-mm-ss}.log" append="false">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}"/>
        </File>

        <File name="Federate" fileName="logs/federate/federate-${date:yyyy-MM-dd-HH-mm-ss}.log" append="false">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}"/>
        </File>

        <File name="SimEngine" fileName="logs/simengine/simengine-${date:yyyy-MM-dd-HH-mm-ss}.log" append="false">
            <PatternLayout pattern="%highlight{%d{HH:mm:ss.SSS} %-5level %logger{36}.%M() @%L - %msg%n}"/>
        </File>

    </Appenders>


    <Loggers>

        <Logger name="no.ffi.hlalib" level="debug" additivity="false">
            <AppenderRef ref="HlaLib"/>
        </Logger>

        <Logger name="logging.UnitLogger" level="debug" additivity="false">
            <AppenderRef ref="UnitLogger"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="federate" level="debug" additivity="false">
            <AppenderRef ref="Federate"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="training" level="debug" additivity="false">
            <AppenderRef ref="Training"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Logger name="util.SimEngine" level="debug" additivity="false">
            <AppenderRef ref="SimEngine"/>
            <AppenderRef ref="Console"/>
        </Logger>

        <Root level="error">
            <appender-ref ref="Console"/>
        </Root>

    </Loggers>

</Configuration>